/**index.wxss**/
@import '../../utils/ripples.min.wxss';

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 130rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 450px;
  color: #2c2e3b
}

.container {
  position:fixed;
  overflow:hidden;
  background-image:url('https://pic2.zhimg.com/v2-dd1ffb087bda594b40269cb964296ce5_r.jpg');
  background-size:100% 100%;
  height:100%;
  width:100%;
}

.text-two{
  margin: 1170rpx 0rpx;
  position:absolute;
}

.text{
  margin: 800rpx 0rpx;
  position:absolute;
}

.text-want{
  display:flex;
  align-items:center;
  justify-content:center;
  font-size:34rpx;
  font-weight:700;
  background:white;
  opacity:0.5;
  color: rgb(252, 170, 188);
}

.arrow {
  width: 50rpx;
  height: 50rpx;
  align-items:center;
  justify-content:center;
}

.music {
  position: absolute;
  z-index: 99;
  -webkit-animation-iteration-count: infinite;
}

/* 旋转class */
.music-on {
  animation: music-rotate 15s linear infinite;
}

/* 旋转动画 */
@keyframes music-rotate {
  0% {
    transform: rotateZ(0deg);
  }

  100% {
    transform: rotateZ(360deg);
  }
}

/* 漂浮动画 */
@keyframes float{
  from{transform:translate(0,0)}
  to{transform:translate(0,6px)}
}
.float{
    animation: float 1.3s ease-in-out 2.7s infinite alternate;
}