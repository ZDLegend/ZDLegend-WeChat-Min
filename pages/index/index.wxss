/**index.wxss**/
@import '../../utils/ripples.min.wxss';

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 130rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 450px;
  color: #2c2e3b
}

.container {
  position:fixed;
  overflow:hidden;
  background-image:url('https://pic4.zhimg.com/80/v2-1f36cc3e3907115de3d3ad2b45e7b1e3_hd.jpg');
  background-size:100% 100%;
  height:100%;
  width:100%;
}

.text{
  margin: 950rpx 0rpx;
  position:absolute;
  font-size:24rpx;
  font-weight:700;
}

.text-want{
  display:flex;
  align-items:center;
  justify-content:center;
  background:rgb(252, 170, 188);
  opacity:0.8;
}

.music {
  position: absolute;
  z-index: 99;
  -webkit-animation-iteration-count: infinite;
}

/* 旋转class */
.music-on {
  animation: music-rotate 15s linear infinite;
}

/* 旋转动画 */
@keyframes music-rotate {
  0% {
    transform: rotateZ(0deg);
  }

  100% {
    transform: rotateZ(360deg);
  }
}