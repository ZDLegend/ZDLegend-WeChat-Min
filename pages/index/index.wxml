<!--index.wxml-->
<view class="content" xmlns:wx="http://www.w3.org/1999/xhtml">
  <image class='background' src="https://pic3.zhimg.com/80/v2-0651198c6c3eaff1247279ac419d1ba6_hd.jpg" mode="aspectFill"></image>
  <view class="container">
    <view class="userinfo">
      <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo">获取头像昵称</button>
      <block wx:else>
        <image bindtap="bindViewTap" class="userinfo-avatar {{musicClass}}" src="{{userInfo.avatarUrl}}" mode="cover"></image>
        </block>
    </view>
  </view>
</view>